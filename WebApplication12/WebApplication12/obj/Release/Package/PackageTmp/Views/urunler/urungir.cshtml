
<body>
    <center>
        <div class="container">
            <div class="row">
                <h2>Kayit Giriniz</h2>
                <form action="~/urunler/urungir" method="post" enctype="multipart/form-data">
                    <div class="col-md-4">
                        <div class="mb-1">
                            <label for="exampleInputEmail1" class="form-label"><b>Ürün Adı</b></label>
                            <input type="hidden" name="urunID" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <input type="text" name="urunismi" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-1">
                            <label for="exampleInputEmail1" class="form-label"><b>Eni</b></label>
                            <input type="text" name="en" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-1">
                            <label for="exampleInputEmail1" class="form-label"><b>Boyu</b></label>
                            <input type="text" name="boy" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-1">
                            <label for="exampleInputEmail1" class="form-label"><b>Fiyatı</b></label>
                            <input type="text" name="fiyat" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-1">
                            <label for="exampleInputEmail1" class="form-label"><b>Ürün Kodu Giriniz</b></label>
                            <input type="text" name="urunkodu" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-1">
                            <label for="exampleInputEmail1" class="form-label"><b>renk Giriniz</b></label>
                            <input type="text" name="renk" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        <div class="mb-1">
                            <label for="exampleInputEmail1" class="form-label"><b>Resim giriniz</b></label>
                            <input type="file" name="resim" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text"></div>
                        </div>
                        @Html.DropDownList("dropdownveri", ViewBag.depart as SelectList, "Kategori Seç", new { @class = "btn btn-primary dropdown-toggle" })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-warning">Kaydet</button>
                </form>
            </div>
        </div>

    </center>
</body>


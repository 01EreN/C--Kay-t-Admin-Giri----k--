<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-warning">
            <div class="container-fluid">
                <a class="navbar-brand" href="~/Home/Index"><b>Instant Action</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        @if (Request.Cookies["userInfo"] != null)
                        {
                            HttpCookie cikisim = Request.Cookies["userinfo"];
                            if (cikisim["UserYetki"] == "admin")
                            {
                                <li class="nav-item">
                                    <a class="btn btn-warning" aria-current="page" href="~/Kategoris/Index"><b>Kategori Oluştur</b></a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-warning" href="~/urunler/urungir"><b>Ürün Gir</b></a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <a class="btn btn-warning" href="~/urunler/goster"><b>Sepet Oluştur</b></a>
                        </li>
                    </ul>a
                    <form class="d-flex">
                        <a class="btn btn-warning" href="~/urunler/login" role="button"><b>Giriş Yap</b></a>
                    </form>
                </div>
            </div>
        </nav>
    </header>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/Scripts/holder.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

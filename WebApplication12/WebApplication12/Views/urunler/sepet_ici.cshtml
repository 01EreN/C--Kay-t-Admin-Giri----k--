<table class="table table-bordered table-striped" style="margin-left:5px; background-color:lightsteelblue">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.urunismi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.en)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.boy)

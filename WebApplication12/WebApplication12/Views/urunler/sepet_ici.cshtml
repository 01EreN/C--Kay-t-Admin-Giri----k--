        @Html.DisplayFor(model => item.toplam)
    </th>                         
    <th>                          
        @Html.DisplayFor(model => item.kategoriID)
    </th>
    @*<td>
        <img src="~/img/@item.resim" width="75" height="75" />
    </td>*@
    <td>
        @Html.ActionLink("Sil", "sepet_sil", new { id = item.kategoriID })
    </td>
</tr>
    }

</table>
<h2>Toplam = @ViewBag.toplam </h2>

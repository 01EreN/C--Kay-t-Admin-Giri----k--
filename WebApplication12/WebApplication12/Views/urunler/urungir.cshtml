@model WebApplication12.Models.urunler

<body>

    @using (Html.BeginForm("urungir", "urunler", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="margin-left:450px">
            <b>
                @ViewBag.mesajim
            </b>

            <br />
            <br />
            <div class="row mb-2">
                <div class="col-md-6">
                    @Html.LabelFor(a => a.urunismi)
                    <br />
                    @Html.TextBoxFor(a => a.urunismi)
                    @Html.ValidationMessageFor(a => a.urunismi)
                </div>
                <br />
                <div class="col-md-6">
                    @Html.LabelFor(a => a.en)
                    <br />
                    @Html.TextBoxFor(a => a.en)
                    @Html.ValidationMessageFor(a => a.en)
                </div>
                <br />
                <div class="col-md-6">
                    @Html.LabelFor(a => a.boy)
                    <br />
                    @Html.TextBoxFor(a => a.boy)
                    @Html.ValidationMessageFor(a => a.boy)
                </div>
                <br />
                <div class="col-md-6">
                    @Html.LabelFor(a => a.adet)
                    <br />
                    @Html.TextBoxFor(a => a.adet)
                    @Html.ValidationMessageFor(a => a.adet)
                </div>
                <br />
                <div class="col-md-6">
                    @Html.LabelFor(a => a.fiyat)
                    <br />
                    @Html.TextBoxFor(a => a.fiyat)
                    @Html.ValidationMessageFor(a => a.fiyat)
                </div>
                <br />
                <div class="col-md-6">
                    @Html.LabelFor(a => a.renk)
                    <br />
                    @Html.TextBoxFor(a => a.renk)
                    @Html.ValidationMessageFor(a => a.renk)
                </div>
                <br />
                <div class="col-md-6">
                    @Html.LabelFor(a => a.urunkodu)
                    <br />
                    @Html.TextBoxFor(a => a.urunkodu)
                    @Html.ValidationMessageFor(a => a.urunkodu)
                </div>
                <br />


            </div>


            @Html.DropDownList("urunveri", ViewBag.uruncanta as SelectList, "Kategori Seç", new { @class = "btn btn-danger dropdown-toggle" })
            <br />
            <input type="file" name="resim" />
            <br />
            <input type="submit" value="Gönder" />
        </div>
    }
</body>

